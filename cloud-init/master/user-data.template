#cloud-config
hostname: master
package_update: true
package_upgrade: true

users:
  - name: root
    ssh-authorized-keys:
      - replace
disable_root: false

runcmd:
  - curl -sfL https://get.k3s.io | INSTALL_K3S_EXEC="--node-ip=10.0.0.10 --tls-san=10.0.0.10" sh -
  - systemctl enable k3s
  - systemctl start k3s
  - cat /var/lib/rancher/k3s/server/node-token > /root/node-token
